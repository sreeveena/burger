<img src="./assets/img/burger.jpg" alt="burger">

<h2>Eat-Da-Burger</h2>
<form class="create-form">
<div id="notDevoured">
    <ul>
    {{#each burgers}}
        {{#unless devoured}}
            <li>{{burger_name}} <div  class = "devour-class" data-id="{{id}}"> Devour</div></li>
        {{/unless}}
    {{/each}}
    </ul>
</div>
<div id="devoured">
    <ul>
    {{#each burgers}}
        {{#if devoured}}
            <li>{{burger_name}}</li>
        {{/if}}
    {{/each}}
    </ul>
</div>

  <div class="form-group">
    <label for="ca"></label>
    <input type="text" id="userBurger" name="name">
  </div>

  <button type="submit">Submit</button>
  <h6>Enter a burger you want to eat and click the submit button</h6>
</form>
